# ─── KITZ Docker Compose — Required Secrets ─────────────
# Copy this file to .env and fill in all values.
# Generate secrets with: openssl rand -hex 32

# ── Database ──
POSTGRES_PASSWORD=

# ── Auth & Service Secrets ──
JWT_SECRET=
DEV_TOKEN_SECRET=

# ── n8n Workflow Automation ──
N8N_AUTH_USER=kitz
N8N_AUTH_PASSWORD=

# ── AI Keys (set at least one pair) ──
# Claude (primary for thinking/content):
CLAUDE_API_KEY=
# ANTHROPIC_API_KEY=  # alternative to CLAUDE_API_KEY

# OpenAI (tool-routing, Whisper, DALL-E image generation):
AI_API_KEY=
# OPENAI_API_KEY=  # alternative to AI_API_KEY
AI_MODEL=gpt-4o-mini

# ── Business Config ──
BUSINESS_ID=
GOD_MODE_USER_ID=

# ── Supabase (optional — for persistent storage) ──
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ── Workspace MCP ──
WORKSPACE_MCP_URL=
WORKSPACE_MCP_KEY=

# ── Payment Webhooks ──
STRIPE_WEBHOOK_SECRET=
PAYPAL_WEBHOOK_ID=
YAPPY_WEBHOOK_SECRET=
BAC_WEBHOOK_SECRET=

# ── WhatsApp / Comms ──
# On Railway: set to the WhatsApp connector's private URL (e.g., http://kitz-whatsapp-connector.railway.internal:3006)
# Docker Compose uses internal hostnames by default
WA_CONNECTOR_URL=

# ── Email ──
RESEND_API_KEY=
SENDGRID_API_KEY=

# ── Voice ──
ELEVENLABS_API_KEY=
ELEVENLABS_AGENT_ID=

# ── Google OAuth ──
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
