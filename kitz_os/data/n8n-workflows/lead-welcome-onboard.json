        "jsonBody": "={\n  \"event\": \"lead_welcome_sent\",\n  \"data\": {\n    \"lead\": \"{{ $json.name }}\",\n    \"channels\": [\"whatsapp\", \"voice\"]\n  },\n  \"workflow_id\": \"lead-welcome-onboard\"\n}",
        "options": {}
