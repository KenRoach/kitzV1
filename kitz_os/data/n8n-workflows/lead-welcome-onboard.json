        "specifyBody": "json",
        "jsonBody": "={\n  \"message\": \"New user signed up: {{ $json.name }} ({{ $json.phone }}, {{ $json.email }}). Create CRM contact, send WhatsApp welcome message, generate a voice welcome greeting using ElevenLabs TTS, and schedule an activation check for 24 hours. All outbound draft-first.\",\n  \"channel\": \"system\",\n  \"userId\": \"n8n-automation\"\n}",
